<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:background="@color/colorPrimary"
                                             android:layout_height="?attr/actionBarSize"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
            android:id="@+id/img_back"
            android:layout_width="34dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:padding="@dimen/dimen5dp"
            android:src="@drawable/ic_left_arrow"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.02"
            android:tint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


    <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/textsise20"
            android:text=""
            android:fontFamily="sans-serif"
            android:textStyle="bold" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_back" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_back" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/img_back" app:layout_constraintHorizontal_bias="0.42"/>

</android.support.constraint.ConstraintLayout>